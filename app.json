{
  "name": "PowerGrid-Deployment",
  "description": "Dagster power grid data processing",
  "scripts": {
    "postdeploy": "dagster job execute -f repository.py -j power_grid_data_pipeline"
  },
  "env": {
    "DAGSTER_HOME": "/app/dagster_home"
  },
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-pipenv"
    }
  ]
}
